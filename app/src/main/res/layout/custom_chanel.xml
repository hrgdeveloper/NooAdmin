<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/iv_custom_chanel_photo"
        android:layout_marginRight="@dimen/_8sdp"
        android:src="@android:drawable/ic_menu_camera"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/tv_custom_chanel_name"
        android:textColor="@android:color/black"
        android:text="نور الصالحین"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toLeftOf="@+id/iv_custom_chanel_photo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آخرین پیام "
        android:singleLine="true"
        android:id="@+id/tv_custom_chanel_last"
        android:maxLines="1"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/tv_custom_chanel_name"
        android:layout_toLeftOf="@+id/iv_custom_chanel_photo"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mohamad"
        android:id="@+id/tv_custom_chanel_admin"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_alignBaseline="@+id/tv_custom_chanel_name"
        android:layout_alignBottom="@+id/tv_custom_chanel_name"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018:22:12 12:42"
        android:id="@+id/tv_custom_chanel_date"
        android:layout_marginLeft="@dimen/_5sdp"
       android:layout_above="@+id/viewLine"
        android:layout_toStartOf="@+id/tv_custom_chanel_cm_count_unread" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:id="@+id/tv_custom_chanel_cm_count"
        android:textStyle="bold"
        android:drawableRight="@drawable/comment"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_alignBaseline="@+id/tv_custom_chanel_admin"
        android:layout_alignBottom="@+id/tv_custom_chanel_admin"
        android:layout_toEndOf="@+id/tv_custom_chanel_admin"
        android:layout_marginStart="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:id="@+id/tv_custom_chanel_cm_count_unread"
        android:textStyle="bold"
        android:drawableRight="@drawable/comment"
        android:drawableTint="@android:color/holo_red_dark"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_alignBaseline="@+id/tv_custom_chanel_admin"
        android:layout_alignBottom="@+id/tv_custom_chanel_admin"
        android:layout_toEndOf="@+id/tv_custom_chanel_cm_count"
        android:layout_marginStart="33dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/test"
            android:layout_below="@+id/iv_custom_chanel_photo"/>
   <View
       android:layout_width="match_parent"
       android:layout_height="0.3dp"
       android:background="@android:color/black"
       android:layout_marginLeft="@dimen/_15sdp"
       android:layout_marginTop="@dimen/_4sdp"
       android:id="@+id/viewLine"
       android:layout_below="@+id/iv_custom_chanel_photo"
     />

</RelativeLayout>