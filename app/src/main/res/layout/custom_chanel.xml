<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/iv_custom_chanel_photo"
        android:layout_marginRight="@dimen/_8sdp"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginEnd="@dimen/_2sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/iv_custom_chanel_photo"
        app:layout_constraintTop_toTopOf="@+id/iv_custom_chanel_photo"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/tv_custom_chanel_name"
        android:layout_marginRight="@dimen/_4sdp"
        android:textColor="@android:color/black"
        android:text="نور الصالحین"

       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آخرین پیام "
        android:layout_marginRight="@dimen/_4sdp"
        android:singleLine="true"
        android:id="@+id/tv_custom_chanel_last"
        android:maxLines="1"
        android:layout_below="@id/tv_custom_chanel_name"
        app:layout_constraintRight_toLeftOf="@+id/iv_custom_chanel_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_custom_chanel_name"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mohamad"
        android:id="@+id/tv_custom_chanel_admin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/iv_custom_chanel_photo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_custom_chanel_cm_count"

        android:layout_marginTop="@dimen/_5sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:id="@+id/tv_custom_chanel_cm_count"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_5sdp"
        android:drawableRight="@drawable/comment"
        app:layout_constraintLeft_toRightOf="@+id/tv_custom_chanel_admin"
        app:layout_constraintTop_toTopOf="@+id/iv_custom_chanel_photo"
        android:layout_marginTop="@dimen/_5sdp"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center"
        android:id="@+id/tv_custom_chanel_cm_count_unread"
        android:textStyle="bold"
        android:drawableRight="@drawable/comment"
        android:drawableTint="@android:color/holo_red_dark"
        app:layout_constraintLeft_toRightOf="@+id/tv_custom_chanel_cm_count"
        app:layout_constraintTop_toTopOf="@+id/iv_custom_chanel_photo"
        android:layout_marginTop="@dimen/_5sdp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018:22:12 12:42"
        android:id="@+id/tv_custom_chanel_date"
        app:layout_constraintRight_toLeftOf="@+id/iv_custom_chanel_photo"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_custom_chanel_last"
      />




   <View
       android:layout_width="0dp"
       android:layout_height="1dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@android:color/black"
       android:id="@+id/viewLine"
       android:layout_marginLeft="@dimen/_10sdp"
       app:layout_constraintBottom_toBottomOf="parent"
   />

</android.support.constraint.ConstraintLayout>